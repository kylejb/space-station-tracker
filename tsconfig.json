{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
    },
    "exclude": ["build", "node_modules"],
    "include": ["**.ts"]
}
