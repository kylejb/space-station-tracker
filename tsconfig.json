{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "build",
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["jest"]
    },
    "include": ["server/*"],
    "exclude": ["build", "node_modules", "web/*"]
}
